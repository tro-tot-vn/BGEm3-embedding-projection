{
  "// Comment": "Example configuration for training BGE-M3 projection head",
  
  "// === Data Settings ===": "",
  "data_path": "data/gen-data-set.json",
  "train_split": 0.9,
  
  "// === Model Settings ===": "",
  "d_out": 256,
  "freeze_encoder": true,
  "use_layernorm": false,
  
  "// === Training Settings ===": "",
  "batch_size": 128,
  "learning_rate": 0.0002,
  "weight_decay": 0.01,
  "epochs": 10,
  "max_length": 512,
  "use_hard_neg": true,
  
  "// === Optimization ===": "",
  "gradient_clip_norm": 1.0,
  "warmup_steps": 0,
  
  "// === Checkpointing ===": "",
  "output_dir": "checkpoints",
  "save_every": 2,
  "save_best": true,
  
  "// === Logging ===": "",
  "log_every": 10,
  "validate_every": 1,
  
  "// === Device ===": "",
  "device": "auto"
}

